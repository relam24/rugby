<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<title></title>
		<% include ../partials/head.ejs %>
	</head>
	<body class='container'>
		<div class=header>
			<div>
		<h1> Tournament Index Page </h1>
		<ul>
			<div class='tours'>
			<% for (let i = 0; i < Tournaments.length; i++){ %>
			<li>
				<div class='tournames'>
					<a href='/tournaments/<%=Tournaments[i].id; %>'>
						<%=Tournaments[i].name; %>
					</a>
				</div>
				<div class='tourlocation'>
						<%=Tournaments[i].location; %>
				</div>
				<div class='tourdate'>
						<%=Tournaments[i].date; %>
				</div>
				<div class='photo-box'
					<a href='/tournaments/<%=Tournaments[i].id; %>'>
						<img src='<%=Tournaments[i].img%>'/>
					</a>
				</div>
				<div class='competitive'>
						<% if(Tournaments[i].competitive === true){ %>
							Competitive
						<% } else { %>
							Less Competitive
						<% } %>
				</div>
				<div class='social'>
						<% if(Tournaments[i].social === true){ %>
							Social
						<% } else { %>
							More Competitive
						<% } %>
				</div>
				<div class='rating'>
						<%=Tournaments[i].rating; %>
				</div>
				<div class='review'>
						<%=Tournaments[i].review; %>
				</div>
			</li>
		 				<% } %>
		 	</div>
					</ul>
				</div>
			</div>
			<nav>
				<a href='/tournaments/new'> Add Tournament Review </a>
			</nav>
			<footer class='footer'>
				<% include ../partials/footer.ejs %>
			</footer>
	</body>
</html>
